<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Department  Information"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/editDepartSSN"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter SSN here for department.."
        android:padding="10dp" />
    <EditText
        android:id="@+id/editComany"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Company.."
        android:padding="10dp" />
    <EditText
        android:id="@+id/editSalary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Salary here.."
        android:padding="10dp" />
    <EditText
        android:id="@+id/editExperience"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Experience here.."
        android:padding="10dp" />


</LinearLayout>